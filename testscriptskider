repeat wait() until game:IsLoaded() and game.Players.LocalPlayer

local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")

local key = getgenv().Key or ""
local hwid = gethwid and gethwid() or tostring(Players.LocalPlayer.UserId)

local domain = "shopgiare.cfd"
local url = "https://" .. domain .. "/api/checkhwid.php?key=" .. key .. "&hwid=" .. hwid

local success, response = pcall(function()
    return HttpService:JSONDecode(game:HttpGet(url))
end)

if not success then
    Players.LocalPlayer:Kick("Không thể kết nối. Liên hệ admin")
    return
end

if response.status ~= "true" then
    Players.LocalPlayer:Kick("Key hoặc HWID sai")
    return
end

print("Key hợp lệ rồi")

game.StarterGui:SetCore("SendNotification", {
    Title = "Zush Hub",
    Text = "Xác minh thành công",
    Duration = 5
})
loadstring(game:HttpGet("https://shopkhoaroblox.cfd/encoded/menuhop.lua"))()
